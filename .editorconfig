root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = false

[*.{py,sh,feature}]
indent_size = 4

# Tabs
[*.{less,css}]
indent_style = tab

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
